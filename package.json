{
  "name": "todo",
  "version": "1.0.0",
  "main": "./src",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "start": "node -r tsconfig-paths/register -r ts-node/register src",
    "knex": "knex",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "lint": "npx prettier --write 'src/{controllers,models,services}/**/*.{ts,js,scss}'"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start --scripts-prepend-node-path",
    "ext": "ts, js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.20.2",
    "sqlite": "^3.0.3"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.11",
    "nodemon": "^2.0.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  }
}
